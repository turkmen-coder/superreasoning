{
  "metadata": {
    "version": "1.0",
    "project": "Super Reasoning | Meta-Prompt Architect",
    "created": "2025-02-13",
    "standards": ["WCAG 2.1 AA", "Atomic Design", "Mobile-First"]
  },
  "uiux_analysis": {
    "summary": "Super Reasoning dark theme cyberpunk estetiği ile single-page uygulama. Niyet girişi, domain/framework seçimi, confirmation modal, sonuç gösterimi ve workflow pipeline içerir.",
    "layout": {
      "structure": "Header (başlık, dil toggle) → Grid (input kolonu + output kolonu) → Footer",
      "breakpoints": {
        "mobile": "320px - 767px (tek kolon, stack)",
        "tablet": "768px - 1023px (2 kolon domain, 2 kolon framework)",
        "desktop": "1024px+ (12 kolon grid, 5+7 split)"
      },
      "responsive_patterns": [
        "grid-cols-1 lg:grid-cols-12",
        "grid-cols-2 md:grid-cols-4 (DomainSelector)",
        "grid-cols-1 md:grid-cols-2 (FrameworkSelector)",
        "text-5xl md:text-7xl (başlık)"
      ]
    },
    "component_inventory": [
      {"name": "CyberButton", "type": "atom", "variants": ["primary", "secondary", "accent", "danger"]},
      {"name": "SkipLink", "type": "atom", "wcag": "2.4.1"},
      {"name": "ProviderToggle", "type": "molecule", "children": ["button"]},
      {"name": "DomainSelector", "type": "organism", "children": ["DomainCard x9"]},
      {"name": "FrameworkSelector", "type": "organism", "children": ["FrameworkCard x8"]},
      {"name": "ConfirmationModal", "type": "organism", "wcag": "2.1.2, 4.1.2"},
      {"name": "ResultDisplay", "type": "organism", "aria_live": "polite"},
      {"name": "WorkflowPanel", "type": "organism"},
      {"name": "InputAnalysisPanel", "type": "molecule"},
      {"name": "TemplateSelector", "type": "molecule"},
      {"name": "ToastSystem", "type": "organism", "aria_live": "polite"},
      {"name": "ApiIntegrationPanel", "type": "organism"}
    ]
  },
  "design_tokens": {
    "colors": {
      "semantic": {
        "background": { "primary": "#050505", "secondary": "#0a0a0f", "tertiary": "#121218" },
        "text": { "primary": "#e5e7eb", "secondary": "#d1d5db", "muted": "#9ca3af", "disabled": "#6b7280" },
        "border": { "default": "#2a2a35", "focus": "#00f0ff" },
        "brand": { "primary": "#00f0ff", "secondary": "#ff003c", "accent": "#7000ff" },
        "feedback": { "success": "#00ff9f", "error": "#ff003c", "warning": "#f59e0b" }
      },
      "alias": {
        "cyber-black": "#050505",
        "cyber-dark": "#0a0a0f",
        "cyber-gray": "#121218",
        "cyber-border": "#2a2a35",
        "cyber-primary": "#00f0ff",
        "cyber-secondary": "#ff003c",
        "cyber-accent": "#7000ff",
        "cyber-success": "#00ff9f"
      }
    },
    "typography": {
      "fontFamilies": {
        "sans": ["Inter", "sans-serif"],
        "mono": ["JetBrains Mono", "monospace"]
      },
      "fontSizes": {
        "xs": "0.625rem",
        "sm": "0.75rem",
        "base": "0.875rem",
        "lg": "1rem",
        "xl": "1.125rem",
        "2xl": "1.25rem",
        "3xl": "1.5rem",
        "5xl": "3rem",
        "7xl": "4.5rem"
      },
      "fontWeights": { "normal": 400, "semibold": 600, "bold": 700, "extrabold": 800 },
      "lineHeights": { "tight": 1.25, "normal": 1.5, "relaxed": 1.75 }
    },
    "spacing": {
      "scale": [0, 1, 2, 3, 4, 6, 8, 12, 16, 24, 32],
      "unit": "0.25rem",
      "semantic": { "section": "4rem", "component": "2rem", "element": "0.5rem" }
    },
    "borderRadius": { "sm": "2px", "md": "4px", "lg": "8px", "full": "9999px" },
    "shadows": {
      "glow-primary": "0 0 25px rgba(0, 240, 255, 0.6)",
      "glow-secondary": "0 0 25px rgba(255, 0, 60, 0.6)",
      "glow-accent": "0 0 25px rgba(112, 0, 255, 0.6)"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    }
  },
  "wcag_2_1_aa_compliance": {
    "perceivable": {
      "1.1.1_text_alternatives": { "status": "partial", "notes": "Emoji ikonlar aria-label ile; dekoratif glitch için aria-hidden önerilir" },
      "1.3.1_info_structure": { "status": "compliant", "notes": "header, main, section, role=dialog kullanılıyor" },
      "1.4.1_color_usage": { "status": "compliant", "notes": "Seçim durumu aria-pressed + border ile; renk tek başına bilgi taşımıyor" },
      "1.4.3_contrast": {
        "status": "verify",
        "ratios": {
          "cyber-primary_on_cyber-black": "~12:1 (büyük metin)",
          "gray-200_on_cyber-black": "~14:1",
          "gray-400_on_cyber-dark": "~7:1",
          "cyber-primary_on_white": "~4.5:1"
        },
        "notes": "Minimum 4.5:1 normal, 3:1 büyük metin; Lighthouse ile doğrula"
      },
      "1.4.10_reflow": { "status": "compliant", "notes": "Tailwind responsive; overflow-x-hidden" }
    },
    "operable": {
      "2.1.1_keyboard": { "status": "compliant", "notes": "Tüm etkileşimler button/link; Tab ile erişim" },
      "2.1.2_no_keyboard_trap": { "status": "compliant", "notes": "ConfirmationModal focus trap + Esc kapatma" },
      "2.4.1_skip_link": { "status": "compliant", "notes": "Ana içeriğe atla linki mevcut" },
      "2.4.7_visible_focus": { "status": "compliant", "notes": "focus-visible: ring-2 ring-cyber-primary" }
    },
    "understandable": {
      "3.1.1_language": { "status": "compliant", "notes": "html lang=tr; dil toggle ile değişir" },
      "3.3.1_error_identification": { "status": "partial", "notes": "Toast ile hata; form alanlarına aria-describedby eklenebilir" }
    },
    "robust": {
      "4.1.2_name_role_value": { "status": "compliant", "notes": "aria-label, aria-pressed, role=dialog" },
      "4.1.3_status_messages": { "status": "compliant", "notes": "ResultDisplay aria-live=polite" }
    },
    "reduced_motion": { "status": "compliant", "notes": "prefers-reduced-motion ile animasyonlar kapatılıyor" },
    "touch_targets": { "status": "verify", "notes": "Butonlar min 44x44px; küçük provider toggle'lar kontrol edilmeli" }
  },
  "atomic_design": {
    "atoms": [
      {"id": "button", "file": "CyberButton.tsx", "props": ["variant", "isLoading", "disabled"]},
      {"id": "skip-link", "file": "App.tsx", "inline": true},
      {"id": "badge", "file": "inline", "description": "Step numarası, version badge"},
      {"id": "icon", "file": "DOMAIN_META, FRAMEWORK_META", "description": "Emoji ikonlar"}
    ],
    "molecules": [
      {"id": "provider-toggle", "file": "App.tsx", "children": ["button x5"], "description": "HF/Groq/Gemini/Claude/OpenRouter seçici"},
      {"id": "input-field", "file": "App.tsx", "children": ["textarea", "label"], "description": "Niyet giriş alanı"},
      {"id": "template-selector", "file": "TemplateSelector.tsx", "children": ["select", "label"]},
      {"id": "analysis-panel", "file": "InputAnalysisPanel.tsx", "children": ["span", "div"]}
    ],
    "organisms": [
      {"id": "domain-selector", "file": "DomainSelector.tsx", "children": ["DomainCard x9"]},
      {"id": "framework-selector", "file": "FrameworkSelector.tsx", "children": ["FrameworkCard x8"]},
      {"id": "confirmation-modal", "file": "ConfirmationModal.tsx", "children": ["header", "grid", "footer", "CyberButton"]},
      {"id": "result-display", "file": "ResultDisplay.tsx", "children": ["markdown", "CyberButton", "Toast"]},
      {"id": "workflow-panel", "file": "WorkflowPanel.tsx", "children": ["select", "CyberButton", "step-list"]},
      {"id": "toast-system", "file": "ToastSystem.tsx", "children": ["Toast x N"]},
      {"id": "api-integration-panel", "file": "ApiIntegrationPanel.tsx"}
    ],
    "templates": [
      {"id": "main-layout", "structure": "SkipLink + ConfirmationModal + Background + Main[Header + Grid[InputCol, OutputCol]]"}
    ],
    "pages": [
      {"id": "home", "route": "/", "template": "main-layout", "organisms": ["domain-selector", "framework-selector", "workflow-panel", "result-display"]}
    ]
  },
  "user_journey_maps": [
    {
      "id": "primary_flow",
      "name": "Master Prompt Üretimi",
      "persona": "Yazılım geliştirici",
      "goal": "Niyetten usta istem (master prompt) üretmek",
      "touchpoints": [
        {"step": 1, "action": "Uygulamayı aç", "component": "Page", "channel": "Web", "emotion": "neutral"},
        {"step": 2, "action": "Niyet gir (textarea)", "component": "InputField", "channel": "Web", "emotion": "engaged"},
        {"step": 3, "action": "Domain seç (auto/backend/frontend vb.)", "component": "DomainSelector", "channel": "Web", "emotion": "exploring"},
        {"step": 4, "action": "Framework seç (KERNEL/RTF vb.)", "component": "FrameworkSelector", "channel": "Web", "emotion": "deciding"},
        {"step": 5, "action": "Provider seç (Groq/Gemini/Claude)", "component": "ProviderToggle", "channel": "Web", "emotion": "configuring"},
        {"step": 6, "action": "Generate tıkla", "component": "CyberButton", "channel": "Web", "emotion": "anticipating"},
        {"step": 7, "action": "Confirmation modal onayla", "component": "ConfirmationModal", "channel": "Web", "emotion": "confirming"},
        {"step": 8, "action": "Sonucu gör (reasoning + master prompt)", "component": "ResultDisplay", "channel": "Web", "emotion": "satisfied"},
        {"step": 9, "action": "Kopyala / Düzenle / Öneri havuzuna ekle", "component": "ResultDisplay", "channel": "Web", "emotion": "productive"}
      ],
      "pain_points": ["Provider toggle küçük (touch target)", "Workflow preset mobilde gizli olabilir"],
      "opportunities": ["Klavye kısayolu (Ctrl+Enter) mevcut", "Skip link erişilebilirlik için"]
    },
    {
      "id": "workflow_flow",
      "name": "Pipeline ile Üretim",
      "persona": "İleri düzey kullanıcı",
      "goal": "Araştırma → Özetle → Üret → Test zincirini çalıştırmak",
      "touchpoints": [
        {"step": 1, "action": "Workflow preset seç (Tam/Hızlı/Araştırma+Sadece)", "component": "WorkflowPanel", "channel": "Web"},
        {"step": 2, "action": "Pipeline başlat", "component": "CyberButton", "channel": "Web"},
        {"step": 3, "action": "Adım adım ilerlemeyi izle", "component": "WorkflowPanel", "channel": "Web"},
        {"step": 4, "action": "Final sonucu incele", "component": "ResultDisplay", "channel": "Web"}
      ]
    },
    {
      "id": "api_integration_flow",
      "name": "API Entegrasyonu",
      "persona": "Backend geliştirici",
      "goal": "API key doğrulama ve prompt CRUD",
      "touchpoints": [
        {"step": 1, "action": "API panel aç", "component": "ApiIntegrationPanel", "channel": "Web"},
        {"step": 2, "action": "API key gir ve Validate", "component": "ApiIntegrationPanel", "channel": "Web"},
        {"step": 3, "action": "Generate / List / Get / Save / Delete", "component": "ApiIntegrationPanel", "channel": "Web"}
      ]
    }
  ],
  "mobile_first_recommendations": [
    {"rule": "Base styles mobile (320px); md: / lg: ile tablet ve desktop"},
    {"rule": "Touch targets min 44x44px; provider toggle px-3 py-1.5 artırılabilir"},
    {"rule": "DomainSelector grid-cols-2 md:grid-cols-4 — mobilde 2 kolon iyi"},
    {"rule": "Modal padding p-4; mobilde tam genişlik"},
    {"rule": "Font size text-5xl md:text-7xl — mobilde okunabilir"},
    {"rule": "Input textarea h-40 — mobilde yeterli"}
  ]
}
